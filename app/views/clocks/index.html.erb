<main class='grid-container'>
  <h1>All Events</h1>
  <table>
    <tr>
      <th>User</th>
      <th>In/Out</th>
      <th>Time</th>
    </tr>
    <% @clocks.each do |clock| %>
    <tr>
      <td><%= clock.user %></td>
      <td><%= clock.in_out %></td>
      <td><%= clock.time.strftime("%F at %I:%M%p") %></td>
    </tr>
    <% end %>
  </table>

  <%= link_to 'Log new time', new_clock_path %>
</main>
